{{!--template for user interface--}}
<div class="row">
 <div class="col-sm-8 col-md-6 mx-auto">
  <div class="card shadow-lg">
   <h3 class="card-header text-center">Compose a New Post</h3>
   <form class="card-body" method="POST" action="/api/posts/new">
    <div class="mb-3">
     <input type="text" id="post_title" name="post_title" class="form-control" placeholder="Post Title" />
    </div>
    <div class="mb-3">
     <textarea id="post_Info" name="post_Info" class="form-control" rows="5" placeholder="Write a post"></textarea>
    </div>
    <div class="d-flex justify-content-end">
     <button type="submit" class="btn btn-primary">Publish</button>
    </div>
   </form>
  </div>
 </div>
</div>