{{!-- Handlebars partial template for displaying a post's content within a card layout --}}
<div class="card mt-3">
  <div class="card-header">
    <div class="d-flex justify-content-between align-items-center">
      <p class="card-text mb-0">{{config_date date_entered}}</p>
      <h6 class="text-dark card-subtitle d-flex align-items-center">
        <i class="fa fa-user mr-2"></i>
        {{user.username}}
      </h6>
    </div>
    <h4 class="mt-2 text-center">
      <a href="/post/{{id}}" data-toggle="tooltip" data-bs-animation="true" title="Select to open the post"
        class="link-muted text-decoration-none">
        {{post_title}}
      </a>
    </h4>
  </div>
  <div class="card-body">
    <p>{{post_info}}</p>
  </div>
</div>