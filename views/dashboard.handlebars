{{!--template for a dashboard view in a web application.--}}

{{#if posts.length}}
<div class="row justify-content-center">
 <div class="text-center">
  <h3>{{username}}'s Posts</h3>
  <a class="link" href="/api/dashboard/new">
   <button class="btn btn-sm btn-primary ml-4">Create New Post</button>
  </a>
 </div>
</div>
{{#each posts as |post|}}
<div class="row justify-content-center">
 {{> my-posts post}}
</div>
{{/each}}
{{else}}
<div class="row justify-content-center mt-3">
 <h3>Create a new post</h3>
</div>
<div class="row justify-content-center mt-3">
 <a class="link" href="/api/dashboard/new">
  <button class="btn btn-sm btn-primary ml-2">New Post</button>
 </a>
</div>
{{/if}}